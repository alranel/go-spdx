.SUFFIXES: .y .ygo .go
.y.ygo:
	goyacc -o $@ $<
	rm y.output

.ygo.go:
	echo "// Code generated by goyacc. DO NOT EDIT!!\n" | cat - $< > $@
	gofmt -w $@

npm-install:
	npm install

licenses-asset: npm-install
	node fetch_list.js
	goblet -g -p spdx -o licenses_asset.go  --ignore-dotfiles ./json
	gofmt -w licenses_asset.go

gen: parser.go licenses-asset

clean:
	rm parser.go
